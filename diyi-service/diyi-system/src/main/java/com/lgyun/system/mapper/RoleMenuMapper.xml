<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lgyun.system.mapper.RoleMenuMapper">

    <select id="queryMenusByRole" resultType="java.lang.String">
        select menu_id from diyi_role_menu where role_id = #{roleId} and bool_deleted = 0
