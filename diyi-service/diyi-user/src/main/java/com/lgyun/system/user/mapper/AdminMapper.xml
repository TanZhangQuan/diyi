<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.lgyun.system.user.mapper.AdminMapper">

    <resultMap id="com.lgyun.system.user.vo.admin.AdminDetailVO" type="adminDetailVO">
        <result property="avatar" column="avatar"/>
        <result property="name" column="name"/>
        <result property="positionName" column="position_name"/>
    </resultMap>

    <select id="queryAdminDetail" resultMap="adminDetailVO">
        SELECT avatar, name, position_name FROM diyi_admin WHERE is_deleted = 0 AND id = #{param1}
    </select>

</mapper>
