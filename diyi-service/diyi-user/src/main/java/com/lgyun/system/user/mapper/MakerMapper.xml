        <result property="createTime" column="create_time"/>
        <result property="updateUser" column="update_user"/>
        <result property="updateTime" column="update_time"/>
        <result property="status" column="status"/>
        <result property="isDeleted" column="is_deleted"/>
    </resultMap>

    <select id="findByPhoneNumber" resultMap="makerMap">
        SELECT *
        FROM diyi_maker
        WHERE phone_number = #{param1}
          and is_deleted = 0
        LIMIT 1
    </select>

    <select id="findByPhoneNumberAndLoginPwd" resultMap="makerMap">
        SELECT *
        FROM diyi_maker
        WHERE phone_number = #{param1} and login_pwd = #{param2}
          and is_deleted = 0
        LIMIT 1
    </select>

    <select id="findByUserId" resultMap="makerMap">
        SELECT *
        FROM diyi_maker
        WHERE user_id = #{param1}
          and is_deleted = 0
        LIMIT 1
    </select>

    <select id="getName" resultType="string">
        SELECT name
        FROM diyi_maker
        WHERE id = #{param1}
        LIMIT 1
    </select>

</mapper>
