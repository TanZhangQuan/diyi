<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.lgyun.system.user.mapper.AgreementMapper">

    <!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.lgyun.system.user.entity.AgreementEntity" id="agreementMap">
        <result property="id" column="id"/>
        <result property="agreementType" column="agreement_type"/>
        <result property="signType" column="sign_type"/>
        <result property="signState" column="sign_state"/>
        <result property="signDate" column="sign_date"/>
        <result property="agreementNo" column="agreement_no"/>
        <result property="sequenceNo" column="sequence_no"/>
        <result property="makerId" column="maker_id"/>
        <result property="enterpriseId" column="enterprise_id"/>
        <result property="serviceProviderId" column="service_provider_id"/>
        <result property="relBureauId" column="rel_bureau_id"/>
        <result property="agentId" column="agent_id"/>
        <result property="partnerId" column="partner_id"/>
        <result property="onlineAgreementTemplateId" column="online_agreement_template_id"/>
        <result property="onlineAggrementUrl" column="online_aggrement_url"/>
        <result property="paperAgreementUrl" column="paper_agreement_url"/>
        <result property="thirdOnlineAgreementUrl" column="third_online_agreement_url"/>
        <result property="paperAgreementUpload" column="paper_agreement_upload"/>
        <result property="firstSideSignPerson" column="first_side_sign_person"/>
        <result property="secondSideSignPerson" column="second_side_sign_person"/>
        <result property="thirdSideSignPerson" column="third_side_sign_person"/>
        <result property="fourthSideSignPerson" column="fourth_side_sign_person"/>
        <result property="uploadDatetime" column="upload_datetime"/>
        <result property="uploadPerson" column="upload_person"/>
        <result property="createUser" column="create_user"/>
        <result property="createTime" column="create_time"/>
        <result property="updateUser" column="update_user"/>
        <result property="updateTime" column="update_time"/>
        <result property="status" column="status"/>
        <result property="isDeleted" column="is_deleted"/>
    </resultMap>
    <resultMap type="com.lgyun.system.user.vo.AgreementWebVO" id="agreementWebVOMap">
        <result property="enterpriseProviderId" column="enterprise_provider_id"/>
        <result property="enterpriseId" column="enterprise_id"/>
        <result property="serviceProviderId" column="service_provider_id"/>
        <result property="agreementId" column="agreement_id"/>
        <result property="agreementNo" column="agreement_no"/>
        <result property="serviceProviderName" column="service_provider_name"/>
        <result property="firstSideSignPerson" column="first_side_sign_person"/>
        <result property="onlineAggrementUrl" column="online_aggrement_url"/>
        <result property="signState" column="sign_state"/>
        <result property="signDate" column="sign_date"/>
    </resultMap>

    <resultMap id="AgreementMakerWebVOMap" type="com.lgyun.system.user.vo.AgreementMakerWebVO">
        <result property="makerEnterpriseId" column="maker_enterprise_id"/>
        <result property="makerId" column="maker_id"/>
        <result property="enterpriseId" column="enterprise_id"/>
        <result property="name" column="name"/>
        <result property="idcardNo" column="idcard_no"/>
        <result property="bankCardNo" column="bank_card_no"/>
        <result property="bankCardVerifyStatus" column="bank_card_verify_status"/>
        <result property="onlineAggrementUrl" column="online_aggrement_url"/>
        <result property="signState" column="sign_state"/>
        <result property="signDate" column="sign_date"/>
    </resultMap>
    <select id="selectServiceAgreement" resultMap="agreementWebVOMap">
        SELECT ep.id AS enterprise_provider_id, ep.enterprise_id, ep.service_provider_id, a.id AS agreement_id, a.agreement_no, sp.service_provider_name, a.first_side_sign_person, a.online_aggrement_url, a.sign_state, a.sign_date FROM diyi_enterprise_provider ep INNER JOIN diyi_service_provider sp ON sp.id = ep.service_provider_id INNER JOIN diyi_agreement a ON sp.id = a.service_provider_id WHERE
         sp.is_deleted = 0 AND a.is_deleted = 0 AND ep.is_deleted = 0  and ep.enterprise_id =#{param1}
        <if test="param2 != null and param2 != ''">
            and sp.service_provider_name like concat('%', #{param2}, '%')
        </if>
        <if test="param3 != null and param3 != ''">
            and a.agreement_no like concat('%', #{param3}, '%')
        </if>
        and a.sign_type=#{param4} AND a.agreement_type =#{param5}
    </select>
    <select id="selectServiceSupplementaryAgreement" resultMap="agreementWebVOMap">
        SELECT ep.id AS enterprise_provider_id, ep.enterprise_id, ep.service_provider_id, a.id AS agreement_id, a.agreement_no, sp.service_provider_name, a.first_side_sign_person, a.online_aggrement_url, a.sign_state, a.sign_date FROM diyi_enterprise_provider ep INNER JOIN diyi_service_provider sp ON sp.id = ep.service_provider_id INNER JOIN diyi_agreement a ON sp.id = a.service_provider_id WHERE
        sp.is_deleted = 0 AND a.is_deleted = 0 AND ep.is_deleted = 0  and ep.enterprise_id =#{param1}
        <if test="param2 != null and param2 != ''">
            and sp.service_provider_name like concat('%', #{param2}, '%')
        </if>
        <if test="param3 != null and param3 != ''">
            and a.agreement_no like concat('%', #{param3}, '%')
        </if>
        and a.sign_type in ('PLATFORMAGREEMENT','PAPERAGREEMENT') AND a.agreement_type =#{param4}
    </select>

    <select id="selectMakerAgreement" resultMap="AgreementMakerWebVOMap">
        SELECT em.id AS maker_enterprise_id, m.id AS maker_id, e.id AS enterprise_id, m.phone_number, m. NAME, m.idcard_no, m.bank_card_no, m.bank_card_verify_status, a.online_aggrement_url,a.sign_state, a.sign_date FROM diyi_maker_enterprise em INNER JOIN diyi_maker m ON em.maker_id = m.id INNER JOIN diyi_enterprise e ON e.id = em.id INNER JOIN diyi_agreement a ON a.maker_id = m.id WHERE em.enterprise_id =#{param1} AND em.is_deleted = 0 AND m.is_deleted = 0 AND e.is_deleted = 0 AND a.is_deleted = 0 AND agreement_type = 1
    </select>
</mapper>
