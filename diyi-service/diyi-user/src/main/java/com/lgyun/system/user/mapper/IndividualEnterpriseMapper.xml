<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.lgyun.system.user.mapper.IndividualEnterpriseMapper">

    <!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.lgyun.system.user.entity.IndividualEnterpriseEntity" id="individualEnterpriseMap">
        <result property="id" column="id"/>
        <result property="makerId" column="maker_id"/>
        <result property="indEntTaxType" column="ind_ent_tax_type"/>
        <result property="ibname" column="ibname"/>
        <result property="ibtaxNo" column="ibtax_no"/>
        <result property="buildDateTime" column="build_date_time"/>
        <result property="bizPark" column="biz_park"/>
        <result property="provinceandCounty" column="provinceand_county"/>
        <result property="registeredMoney" column="registered_money"/>
        <result property="businessAddress" column="business_address"/>
        <result property="mainIndustry" column="main_industry"/>
        <result property="bizScope" column="biz_scope"/>
        <result property="candidatedNames" column="candidated_names"/>
        <result property="netBusinessAddress" column="net_business_address"/>
        <result property="businessLicenceUrl" column="business_licence_url"/>
        <result property="businessLicenceCopyUrl" column="business_licence_copy_url"/>
        <result property="ibstate" column="ibstate"/>
        <result property="submitDateTime" column="submit_date_time"/>
        <result property="registeredDate" column="registered_date"/>
        <result property="taxRegisterDateTime" column="tax_register_date_time"/>
        <result property="logoutDateTime" column="logout_date_time"/>
        <result property="contactName" column="contact_name"/>
        <result property="contactPhone" column="contact_phone"/>
        <result property="serviceRat" column="service_rat"/>
        <result property="investorHandCommitment" column="investor_hand_commitment"/>
        <result property="createUser" column="create_user"/>
        <result property="createTime" column="create_time"/>
        <result property="updateUser" column="update_user"/>
        <result property="updateTime" column="update_time"/>
        <result property="status" column="status"/>
        <result property="isDeleted" column="is_deleted"/>
    </resultMap>

    <resultMap type="com.lgyun.system.user.vo.IndividualEnterpriseListByMakerVO" id="individualEnterpriseListByMakerVO">
        <result property="id" column="id"/>
        <result property="ibname" column="ibname"/>
        <result property="candidatedNames" column="candidated_names"/>
    </resultMap>

    <resultMap type="com.lgyun.system.user.vo.IndividualEnterpriseDetailVO" id="individualEnterpriseDetailVO">
        <result property="id" column="id"/>
        <result property="ibname" column="ibname"/>
        <result property="candidatedNames" column="candidated_names"/>
        <result property="ibtaxNo" column="ibtax_no"/>
        <result property="bizPark" column="biz_park"/>
        <result property="mainIndustry" column="main_industry"/>
        <result property="bizScope" column="biz_scope"/>
        <result property="indEntTaxType" column="ind_ent_tax_type"/>
        <result property="makerId" column="maker_id"/>
        <result property="businessLicenceUrl" column="business_licence_url"/>
        <result property="businessLicenceCopyUrl" column="business_licence_copy_url"/>
    </resultMap>

    <select id="findMakerId" resultMap="individualEnterpriseMap">
        select * from diyi_individual_enterprise where maker_id=#{makerId} and is_deleted = 0
    </select>

    <select id="listByMaker" resultMap="individualEnterpriseListByMakerVO">
        select id, ibname, candidated_names from diyi_individual_enterprise
        where maker_id = #{individualEnterpriseListByMakerDto.makerId} and is_deleted = 0
        <if test="individualEnterpriseListByMakerDto.ibstate != null">
            and ibstate = #{individualEnterpriseListByMakerDto.ibstate}
        </if>
    </select>

    <select id="findById" resultMap="individualEnterpriseDetailVO">
        select id, ibname, candidated_names, ibtax_no, biz_park, main_industry, biz_scope, ind_ent_tax_type, maker_id,
        business_licence_url, business_licence_copy_url from diyi_individual_enterprise
        where id = #{individualBusinessId} and is_deleted = 0 limit 1
    </select>

</mapper>
