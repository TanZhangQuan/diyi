<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.lgyun.system.user.mapper.IndividualBusinessMapper">

    <resultMap type="com.lgyun.system.user.vo.maker.IndividualBusinessListVO" id="individualBusinessListVO">
        <result property="id" column="id"/>
        <result property="ibname" column="ibname"/>
        <result property="candidatedNames" column="candidated_names"/>
    </resultMap>

    <resultMap type="com.lgyun.system.user.vo.maker.IndividualBusinessDetailMakerVO" id="individualBusinessDetailMakerVO">
        <result property="id" column="id"/>
        <result property="ibname" column="ibname"/>
        <result property="candidatedNames" column="candidated_names"/>
        <result property="ibtaxNo" column="ibtax_no"/>
        <result property="bizPark" column="biz_park"/>
        <result property="mainIndustry" column="main_industry"/>
        <result property="bizScope" column="biz_scope"/>
        <result property="bizType" column="biz_type"/>
        <result property="bizName" column="biz_name"/>
        <result property="registeredMoney" column="registered_money"/>
        <result property="businessLicenceUrl" column="business_licence_url"/>
    </resultMap>

    <resultMap type="com.lgyun.system.user.vo.enterprise.IndividualBusinessEnterpriseListVO" id="individualBusinessDetailEnterpriseVO">
        <result property="id" column="id"/>
        <result property="serviceProviderName" column="service_provider_name"/>
        <result property="ibname" column="ibname"/>
        <result property="candidatedNames" column="candidated_names"/>
        <result property="ibtaxNo" column="ibtax_no"/>
        <result property="bizPark" column="biz_park"/>
        <result property="mainIndustry" column="main_industry"/>
        <result property="bizScope" column="biz_scope"/>
        <result property="bizType" column="biz_type"/>
        <result property="bizName" column="biz_name"/>
        <result property="registeredMoney" column="registered_money"/>
        <result property="businessLicenceUrl" column="business_licence_url"/>
        <result property="ibstate" column="ibstate"/>
        <result property="createTime" column="create_time"/>
    </resultMap>

    <select id="listByMaker" resultMap="individualBusinessListVO">
        SELECT id, ibname, candidated_names FROM diyi_individual_business WHERE is_deleted = 0 AND maker_id = #{param1}
        <if test="param2 != null">
            AND ibstate = #{param2}
        </if>
    </select>

    <select id="findById" resultMap="individualBusinessDetailMakerVO">
        SELECT t1.ibname, t1.candidated_names, t1.ibtax_no, t1.biz_park, t1.main_industry, t1.biz_scope, t1.biz_type, t2.name AS biz_name,
        t1.registered_money, t1.business_licence_url FROM diyi_individual_business t1 INNER JOIN diyi_maker t2 ON t1.maker_id = t2.id
        WHERE t1.is_deleted = 0 AND t2.is_deleted = 0 AND t1.id = #{param1}
    </select>

    <select id="getIndividualBusinessList" resultMap="individualBusinessDetailEnterpriseVO">
        SELECT t1.id, t3.service_provider_name, t1.ibname, t1.ibtax_no, t1.main_industry, t1.biz_scope, t1.biz_type, t2.name AS biz_name, t2.idcard_no AS bizIdcardNo,
        t1.registered_money, t1.business_licence_url, t1.ibstate, t1.create_time FROM diyi_individual_business t1 INNER JOIN diyi_maker t2 ON t1.maker_id = t2.id
        INNER JOIN diyi_service_provider t3 ON t1.service_provider_id = t3.id
        <if test="param1 != null">
            INNER JOIN diyi_maker_enterprise t4 ON t2.id = t4.maker_id AND t4.is_deleted = 0
        </if>
        WHERE t1.is_deleted = 0 AND t2.is_deleted = 0 AND t3.is_deleted = 0
        <if test="param1 != null">
            AND t4.enterprise_id = #{param1}
        </if>
        <if test="param2 != null">
            AND t3.id = #{param2}
        </if>
        <if test="param3.individualBusinessEnterpriseId != null">
            AND t1.id LIKE concat('%', #{param3.individualBusinessEnterpriseId}, '%')
        </if>
        <if test="param3.ibname != null and param3.ibname.trim() != ''">
            AND t1.ibname LIKE concat('%', #{param3.ibname}, '%')
        </if>
        <if test="param3.beginDate != null">
            AND DATEDIFF(t1.create_time, #{param3.beginDate}) <![CDATA[ >= ]]> 0
        </if>
        <if test="param3.endDate != null">
            AND DATEDIFF(t1.create_time, #{param3.endDate}) <![CDATA[ <= ]]> 0
        </if>
    </select>

</mapper>
